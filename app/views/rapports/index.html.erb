<h1>Rapports</h1>


<h2>Taux de conformité</h2>
<div>
<%= form_tag :action => 'conformite' do %>
<table>
<tr><td>Date de départ:</td><td> <%= select_date(Date.today(), :prefix => 'depart') %></td></tr>
<br>
<tr><td>Date de fin:</td><td>  <%= select_date(Date.today(), :prefix => 'fin') %></td></tr>
<br>
<tr><td>Indicateur:</td><td>  <%= select_tag('indic', options_for_select(Mesure::Indicateurs), :class => 'indicVar') %></td></tr>
</table>

<p><%= submit_tag("Générer rapport", :class => "submit") %> </p>

<% end%>
</div>
